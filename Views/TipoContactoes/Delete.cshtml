@model StandVirtual.Models.TipoContacto

@{
    ViewBag.Title = "Delete Contact Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h2>Delete Contact Type</h2>
        </div>

        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this contact type?</h3>
            <div class="mb-4">
                <h4>Contact Type Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        Nome
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DescricaoTipoContacto)
                    </dd>
                </dl>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
