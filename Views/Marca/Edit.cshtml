@model StandVirtual.Models.Marca

@{
    ViewBag.Title = "Edit Brand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h2>Edit Brand</h2>
        </div>

        <div class="card-body">
            <!-- Feedback Messages -->
            @if (TempData["MessageError"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @TempData["MessageError"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.MarcaID)

                <div class="mb-3">
                    @Html.LabelFor(model => model.NomeMarca, "Brand Name", new { @class = "form-label" })
                    @Html.EditorFor(model => model.NomeMarca, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter brand name", required = "required" } })
                    @Html.ValidationMessageFor(model => model.NomeMarca, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
