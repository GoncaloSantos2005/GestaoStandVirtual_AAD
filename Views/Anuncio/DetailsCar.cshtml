@model StandVirtual.Models.Automovel

@{
    ViewBag.Title = "Car Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <!-- Image Section -->
        <div class="text-center bg-dark p-3">
            <img src="@Model.Anuncio.Foto"
                 alt="@Model.Anuncio.Titulo"
                 class="img-fluid rounded shadow" style="max-width: 100%; height: auto; object-fit: cover;">
        </div>
        <!-- Information Section -->
        <div class="card-body">
            <h2 class="text-primary fw-bold text-center mb-3">
                <i class="fas fa-car"></i> @Model.Anuncio.Titulo
            </h2>
            <h4 class="text-success fw-bold text-center mb-4">
                <i class="fas fa-euro-sign"></i> @String.Format("{0:N0}", Model.Anuncio.Preco)
            </h4>
            <div class="row">
                <div class="col-md-6">
                    <p><i class="fas fa-industry"></i> <strong>Brand:</strong> @(Model.Modelo?.Marca?.NomeMarca ?? "N/A")</p>
                    <p><i class="fas fa-car-side"></i> <strong>Model:</strong> @(Model.Modelo?.Descricao ?? "N/A")</p>
                    <p><i class="fas fa-calendar-alt"></i> <strong>Year:</strong> @Model.Ano</p>
                    <p><i class="fas fa-gas-pump"></i> <strong>Fuel Type:</strong> @(Model.Combustivel?.TipoCombustivel?.DescricaoTC ?? "N/A")</p>
                    <p><i class="fas fa-road"></i> <strong>Mileage:</strong> @String.Format("{0:N0}", Model.Quilometros) KM</p>
                    <p><i class="fas fa-cogs"></i> <strong>Transmission:</strong> @Model.TipoCaixa</p>                    
                </div>
                <div class="col-md-6">
                    <p><i class="fas fa-bolt"></i> <strong>Power:</strong> @Model.Potencia HP</p>
                    <p><i class="fas fa-tachometer-alt"></i> <strong>Cilindrada:</strong> @String.Format("{0:N0}", Model.Cilindrada) cc</p>
                    <p><i class="fas fa-grip-lines"></i> <strong>Traction:</strong> @(Model.TipoAutomovel?.Descricao ?? "N/A")</p>
                    <p><i class="fas fa-door-open"></i> <strong>Number of Doors:</strong> @Model.NumPortas</p>
                    <p><i class="fas fa-globe"></i> <strong>Imported:</strong> @(Model.Importado ? "Yes" : "No")</p>
                    <p><i class="fas fa-palette"></i> <strong>Color:</strong> @Model.Cor</p>

                </div>
            </div>
            <!-- Contact Button -->
            <div class="mt-4 text-center">
                <h5><i class="fas fa-user"></i> <strong>Seller:</strong> @Model.Anuncio.Usuario.Nome</h5>
                <a href="mailto:@Model.Anuncio.Usuario.Email" class="btn btn-primary">
                    <i class="fas fa-envelope"></i> Contact Seller
                </a>
            </div>
        </div>
        <!-- Additional Information -->
        <div class="card-footer bg-light p-4">
            <h4 class="text-secondary fw-bold"><i class="fas fa-info-circle"></i> Additional Information</h4>
            <p>
                @(string.IsNullOrEmpty(Model.Anuncio.Descricao)
                ? "No additional information provided."
                : Model.Anuncio.Descricao)
            </p>
        </div>
        <!-- Footer Section -->
        <div class="text-center bg-light py-3">
            <a href="@Url.Action("AdList", "Anuncio")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
